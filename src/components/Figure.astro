---
import { Image } from 'astro:assets';

export interface Props {
  src: ImageMetadata;
  alt?: string;
  class?: string;
  caption?: string;
}

const { src, alt, class: className, caption } = Astro.props;
---

<figure class={className}>
  <Image src={src} alt={alt || ""} />
  {caption ? <figcaption set:html={caption} /> : alt && <figcaption>{alt}</figcaption>}
</figure>

<style>
  figure {
    margin: 1rem 0;
    text-align: center;
  }

  figcaption {
    margin-top: 0.5rem;
    color: hsl(var(--muted-foreground));
    font-size: 0.875em;
    text-align: center;
  }
</style>